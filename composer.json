{
    "name": "ad5jp/php-chatwork",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "AD5jp\\PhpChatwork\\": "src/"
        }
    },
    "authors": [
        {
            "name": "ad5jp"
        }
    ],
    "require": {
        "php": ">=7.4",
        "guzzlehttp/guzzle": ">=7.4.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^10.5"
    },
    "scripts": {
        "stan": [
            "vendor/bin/phpstan analyse --memory-limit=1G"
        ],
        "test": [
            "vendor/bin/phpunit tests/ --testdox"
        ]
    }
}
